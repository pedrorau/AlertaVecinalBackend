# ==================================
# SUPABASE CONFIGURATION
# ==================================
# Get these values from: https://supabase.com/dashboard/project/_/settings/api

# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key (safe to use in clients)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (KEEP SECRET! Server-side only)
SUPABASE_SERVICE_KEY=your-service-key-here

# ==================================
# JWT CONFIGURATION
# ==================================
# Get JWT secret from: https://supabase.com/dashboard/project/_/settings/api
# Look for "JWT Settings" section

# JWT Secret (same as Supabase JWT Secret)
JWT_SECRET=your-jwt-secret-here

# JWT Issuer (your Supabase auth endpoint)
JWT_ISSUER=https://your-project.supabase.co/auth/v1

# JWT Audience (usually "authenticated")
JWT_AUDIENCE=authenticated

# ==================================
# DATABASE CONFIGURATION
# ==================================
# Get database URL from: https://supabase.com/dashboard/project/_/settings/database
# Use "Direct Connection" or "Connection Pooling" based on your needs

# PostgreSQL connection string
# Format: jdbc:postgresql://db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=jdbc:postgresql://db.your-project.supabase.co:5432/postgres

# Database user (default: postgres)
DATABASE_USER=postgres

# Database password (found in Settings > Database)
DATABASE_PASSWORD=your-database-password

# Connection pool size (optional, default: 10)
DATABASE_POOL_SIZE=10

# ==================================
# SERVER CONFIGURATION
# ==================================
# Port for the backend server (optional, default: 8080)
PORT=8080
